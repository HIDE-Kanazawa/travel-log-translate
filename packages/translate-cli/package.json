{
  "name": "translate-cli",
  "version": "0.1.0",
  "description": "CLI tool for translating Japanese markdown files to multiple languages using DeepL API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "translate": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "deepl-node": "^1.13.0",
    "gray-matter": "^4.0.3",
    "globby": "^14.0.0",
    "commander": "^11.1.0",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "tsx": "^4.7.0",
    "vitest": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2"
  }
}