{
  "name": "worker",
  "version": "0.1.0",
  "description": "Sanity document translation worker",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sanity-translate": "dist/index.js"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "shared": "workspace:^",
    "@sanity/client": "^6.15.7",
    "@sanity/types": "^3.37.0",
    "commander": "^11.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.10",
    "tsx": "^4.7.0",
    "vitest": "^1.2.2",
    "@vitest/coverage-v8": "^1.2.2",
    "typescript": "^5.3.3"
  }
}