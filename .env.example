# ==============================================
# üåè Travel-Log Translation Pipeline - Environment Configuration
# ==============================================

# ----------------------------------------
# DeepL API Configuration
# ----------------------------------------
# Get your API key from: https://www.deepl.com/pro-api
DEEPL_API_KEY=your_deepl_api_key_here

# ----------------------------------------  
# Sanity CMS Configuration
# ----------------------------------------
# Project ID from your Sanity dashboard
SANITY_PROJECT_ID=your_sanity_project_id

# Dataset name (e.g., 'production', 'staging', 'development')
SANITY_DATASET=production

# API token with read/write permissions
# Generate at: https://manage.sanity.io/projects/[PROJECT_ID]/settings/api
SANITY_API_TOKEN=your_sanity_api_token

# Sanity API version (format: YYYY-MM-DD)
SANITY_API_VERSION=2024-01-01

# ----------------------------------------
# Webhook Configuration  
# ----------------------------------------
# Secret for HMAC signature verification
# Generate a secure random string (e.g., openssl rand -hex 32)
SANITY_WEBHOOK_SECRET=your_webhook_secret_here

# ----------------------------------------
# GitHub Integration
# ----------------------------------------
# Personal Access Token with 'repo' scope
# Generate at: https://github.com/settings/personal-access-tokens
GITHUB_TOKEN=your_github_personal_access_token

# Repository owner (GitHub username/organization)
GITHUB_OWNER=HIDE-Kanazawa

# Repository name
GITHUB_REPO=travel-log-translate

# ----------------------------------------
# Server Configuration
# ----------------------------------------
# Port for webhook server (default: 3000)
PORT=3000

# Environment (development, staging, production)
NODE_ENV=development

# ----------------------------------------
# Optional: Translation Cache
# ----------------------------------------
# Directory for DeepL translation cache (default: .deepl-cache)
# DEEPL_CACHE_DIR=.deepl-cache

# ----------------------------------------
# Optional: API Limits
# ----------------------------------------
# Maximum characters per month (default: 450000 for 500k DeepL quota)
# MAX_CHARACTERS_PER_MONTH=450000